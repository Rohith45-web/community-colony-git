## selection sort
def selection_sort(arr):
    n=len(arr)
    for i in range(n):
        min_index=i
        for j in range(i+1,n):
            if arr[j]<arr[min_index]:
                mini_index=j
        arr[i],arr[min_index]=arr[min_index],arr[i]
        print(f"after pass {i+1}: {arr}")
    return arr            
numbers=[1,4,3,2] 
sorted=selection_sort(numbers)  
print(sorted)       